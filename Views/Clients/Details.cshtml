@model MyLittleBusiness.Models.Client

@{
    ViewData["Title"] = "Szczegóły klienta";
}

<style>
    .card {
        background-color: mediumseagreen;
        color: white;
    }
</style>

<h1 class="text-center m-3 p-3">Szczegóły</h1>

<div class="d-flex justify-content-center">
    <div class="card m-2 col-md-6 p-3 text-center">
        <div class="card-title">
            <h3 class="m-2 p-2">Klient nr. @Model.ClientId</h3>
        </div>
        <hr />
        <div class="m-2 p-2">
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.ClientName)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.ClientName)
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.Address)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.Address)
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.NIP)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.NIP)
                </div>
            </div>
            <div class="pt-3">
                <a class="btn btn-primary text-white text-decoration-none btn-link" asp-action="Edit" asp-route-id="@Model?.ClientId"><div>Edytuj</div></a>
                <a class="btn btn-warning text-white text-decoration-none btn-link" asp-action="Index"><div>Powrót</div></a>
            </div>
        </div>
    </div>
</div>

@model MyLittleBusiness.Models.FactureHasItem

@{
    ViewData["Title"] = "Szczegóły faktury";
}

<h1>Szczegóły</h1>

<div>
    <h4>Towar nr. @Model.ItemId w fakturze nr. @Model.FactureId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceNetto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceNetto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceGross)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceGross)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Facture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Facture.FactureId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-id=@Model?.FactureId>Powrót do listy towarów w fakturze</a>
</div>

@model MyLittleBusiness.Models.FactureHasItem

@{
    ViewData["Title"] = "Szczegóły faktury";
}

<style>
    .card {
        background-color: mediumseagreen;
        color: white;
    }
</style>

<h1 class="text-center m-3 p-3">Szczegóły</h1>

<div class="d-flex justify-content-center">
    <div class="card m-2 col-md-6 p-3 text-center">
        <div class="card-title">
            <h3 class="m-2 p-2">Towar:</h3>
        </div>
        <hr />
        <div class="m-2 p-2">
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.Item)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.Item.Name)
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.Amount)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.Amount) @Html.DisplayFor(model => model.Item.ProductCountAs)
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.PriceNetto)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.PriceNetto) zł
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.PriceGross)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.PriceGross) zł
                </div>
            </div>
            <div class="pt-3">
                <a class="btn btn-warning text-white text-decoration-none btn-link" asp-action="Index" asp-route-id=@Model?.FactureId><div>Powrót</div></a>
            </div>
        </div>
    </div>
</div>
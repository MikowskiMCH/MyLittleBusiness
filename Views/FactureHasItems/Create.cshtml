@model MyLittleBusiness.Models.FactureHasItem
@{
    ViewData["Title"] = "Dodaj towar do faktury";
}
<h1>Dodaj</h1>

<h4>Towar do faktury nr. @Model.FactureId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FactureId" class="control-label"></label>
                <select asp-for="FactureId" class ="form-control" asp-items="ViewBag.FactureId" ></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class ="form-control" asp-items="ViewBag.ItemId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id=@Model.FactureId>Powrót do listy towarów w fakturze</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

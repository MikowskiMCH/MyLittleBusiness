@model MyLittleBusiness.Models.Item

@{
    ViewData["Title"] = "Szczegóły towaru";
}

<style>
    .card{
        background-color: mediumseagreen;
        color: white;
    }
</style>

<h1 class="text-center m-3 p-3">Szczegóły</h1>

<div class="d-flex justify-content-center">
    <div class="card m-2 col-md-6 p-3 text-center">
        <div class="card-title">
            <h3 class="m-2 p-2">Towar nr. @Model.ItemId</h3>
        </div>
        <hr />
        <div class="m-2 p-2">
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.Name)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.PriceNetto)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.PriceNetto) zł
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.PriceGross)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.PriceGross) zł
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.VatValue)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.VatValue)%
                </div>
            </div>
            <div class="row p-1 m-1">
                <div class="col-6">
                    @Html.DisplayNameFor(model => model.ProductCountAs)
                </div>
                <div class="col-6">
                    @Html.DisplayFor(model => model.ProductCountAs)
                </div>
            </div>
            <div class="pt-3">
                <a class="btn btn-primary text-white text-decoration-none btn-link" asp-action="Edit" asp-route-id="@Model?.ItemId"><div>Edytuj</div></a>
                <a class="btn btn-warning text-white text-decoration-none btn-link" asp-action="Index"><div>Powrót</div></a>
            </div>
        </div>
    </div>
</div>

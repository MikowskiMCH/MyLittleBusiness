@model MyLittleBusiness.Models.Item

@{
    ViewData["Title"] = "Usuń towar";
}

<h1>Usuń</h1>

<h3>Czy napewno usunąc tę pozycję z listy towarów?</h3>
<div>
    <h4>Towar nr. @Model.ItemId</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceNetto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceNetto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceGross)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceGross)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VatValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VatValue)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy towarów</a>
    </form>
</div>

@{
    ViewData["Title"] = "Wykresy";

    if (SignInManager.IsSignedIn(User))
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    }

    var data = ViewData["data"] as Dictionary<string, decimal>;
}
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>    
        const labels = @Html.Raw(Json.Serialize(data.Keys));
        const datas = @Html.Raw(Json.Serialize(data.Values));

        const data = {
            labels: labels,
            datasets: [{
                label: 'Utarg brutto',
                backgroundColor: 'rgb(255, 99, 132)',
                borderColor: 'rgb(255, 99, 132)',
                data: datas,
        }]
        };

        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    yAxes: {
                        ticks:{
                            callback: function (value, index, ticks) {
                                return Chart.Ticks.formatters.numeric.apply(this, [value, index, ticks]) + 'zł';
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                let label = context.dataset.label || '';

                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += new Intl.NumberFormat('pl-PL', { style: 'currency', currency: 'PLN' }).format(context.parsed.y);
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        };
    </script>
    <script>
        const myChart = new Chart(
            document.getElementById('salesChart'),
            config
        );
    </script>
}
<div class="container">
    <canvas id="salesChart"></canvas>
</div>
